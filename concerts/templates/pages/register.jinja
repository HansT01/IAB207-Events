{% extends "base.jinja" %}
{% from "_formhelpers.jinja" import render_field %}
{% block content %}
<div class="page container">
  <div class="container my-5">
    <div class="d-flex justify-content-center">
      <div class="card p-5 shadow bg-300 tx-000">
        <div class="d-flex justify-content-center">
          <h2>Register</h2>
        </div>
        <div class="d-flex justify-content-center mt-3">
          <form>
            <div class="mt-3">
              {{ render_field(form.username, type="text", class="form-control") }}
            </div>
            <div class="mt-3">
              {{ render_field(form.email, type="text", class="form-control") }}
            </div>
            <div class="mt-3">
              {{ render_field(form.password, type="text", class="form-control") }}
            </div>
            <div class="mt-3">
              {{ render_field(form.confirm, type="text", class="form-control") }}
            </div>

            <div class="d-flex justify-content-center mt-5">
              <button type="button" name="button" class="btn bg-200 tx-000 login-button">
                Register
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock content %}