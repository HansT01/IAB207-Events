{% from "_formhelpers.jinja" import render_field %}

<div class="modal fade" id="event-editor" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content bg-400 tx-000">
      <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>

      <section class="modal-body p-3">
        <form action="" method="post" class="form" role="form">
          <div class="row nopadding">
            <div class="mt-3">
              {{ render_field(form.title, type="text", class="form-control") }}
            </div>

            <div class="mt-3">
              {{ render_field(form.image, type="file", class="form-control") }}
            </div>
            {# <div class="ratio ratio-16x9 mb-3">
              <img src="./images/pexels-thibault-trillet-167491.jpg" class="img-fluid card-img" alt="concert" />
            </div> #}

            <div class="mt-3 col-sm-6">
              {{ render_field(form.genre, type="text", class="form-control") }}
            </div>

            <div class="mt-3 col-sm-6">
              {{ render_field(form.status, type="text", class="form-control") }}
            </div>

            <div class="mt-3 col-sm-6">
              {{ render_field(form.venue, type="text", class="form-control") }}
            </div>

            <div class="mt-3 col-sm-6">
              {{ render_field(form.datetime, type="datetime-local", class="form-control") }}
            </div>

            <div class="mt-3 col-sm-6">
              {{ render_field(form.tickets, type="number", class="form-control") }}
            </div>

            <div class="mt-3 col-sm-6">
              {{ render_field(form.price, type="number", class="form-control") }}
            </div>
          </div>

          <div class="row nopadding mb-3">
            <div class="mt-3">
              {{ render_field(form.desc, type="text", class="form-control") }}
            </div>
          </div>

          <div class="row d-flex justify-content-center">
            {{ render_field(form.submit, type="button", class="btn bg-200 tx-000 login-button") }}
          </div>
        </form>
      </section>
    </div>
  </div>
</div>