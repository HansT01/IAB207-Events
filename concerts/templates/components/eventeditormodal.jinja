<div
  class="modal fade"
  id="event-editor"
  data-bs-keyboard="false"
  tabindex="-1"
  aria-labelledby="staticBackdropLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-lg">
    <div class="modal-content bg-400 tx-000">
      <button
        type="button"
        class="btn-close btn-close-white"
        data-bs-dismiss="modal"
        aria-label="Close"
      ></button>

      <section class="modal-body p-3">
        <div class="row nopadding">
          <div class="col-lg-5 col-xs-12">
            <form class="form-inline row nopadding mb-3">
              <p class="text-left mb-1">Title:</p>
              <div class="col input-box">
                <input
                  type="text"
                  class="form-control"
                  placeholder="Title"
                  aria-label="Title"
                  aria-describedby="basic-addon1"
                />
              </div>
            </form>

            <form class="form-inline row nopadding mb-3">
              <p class="text-left mb-1">Artist name:</p>
              <div class="col input-box">
                <input
                  type="text"
                  class="form-control"
                  placeholder="Artist"
                  aria-label="Artist"
                  aria-describedby="basic-addon1"
                />
              </div>
            </form>

            <form class="form-inline row nopadding mb-3">
              <p class="text-left mb-1">Musical type:</p>
              <div class="col input-box">
                <input
                  type="text"
                  class="form-control"
                  placeholder="Type"
                  aria-label="Type"
                  aria-describedby="basic-addon1"
                />
              </div>
            </form>

            <form class="form-inline row nopadding mb-3">
              <p class="text-left mb-1">Venue address:</p>
              <div class="col input-box">
                <input
                  type="text"
                  class="form-control"
                  placeholder="Venue name, city, sate, country"
                  aria-label="address"
                  aria-describedby="basic-addon1"
                />
              </div>
            </form>

            <form class="form-inline row nopadding mb-3">
              <p class="text-left mb-1">Event status:</p>
              <div class="col input-box">
                <select class="form-select" aria-label="Default select example">
                  <option selected>Select a status...</option>
                  <option value="upcoming">Upcoming</option>
                  <option value="inactive">Inactive</option>
                  <option value="booked">Booked</option>
                  <option value="cancelled">Cancelled</option>
                </select>
              </div>
            </form>

            <form class="form-inline row nopadding mb-3">
              <p class="text-left mb-1">Available tickets:</p>
              <div class="col input-box">
                <input
                  type="text"
                  class="form-control"
                  placeholder="Number of tickets"
                  aria-label="Tickets"
                  aria-describedby="basic-addon1"
                />
              </div>
            </form>
          </div>
          <div class="col position-relative">
            <div class="">
              <p class="">Upload a custom image</p>
              <button
                class="
                  btn
                  bg-200
                  tx-000
                  btn-sm
                  edit-button
                  rounded
                  align-self-center
                  w-50
                  nopadding
                  mt-2
                  mb-3
                "
                type="button"
              >
                Choose file
              </button>
              <div class="ratio ratio-16x9 mb-3">
                <img
                  src="./images/pexels-thibault-trillet-167491.jpg"
                  class="img-fluid card-img"
                  alt="concert"
                />
              </div>
            </div>
          </div>
        </div>
        <div class="row nopadding mb-3">
          <p class="text-left mb-1">Event description:</p>
          <div class="input-box">
            <textarea class="form-control"></textarea>
          </div>
        </div>
        <div class="d-flex justify-content-center">
          <button
            class="
              btn
              bg-200
              tx-000
              btn-sm
              edit-button
              rounded
              w-50
              nopadding
              mt-2
              mb-2
            "
            type="button"
          >
            Save changes
          </button>
        </div>
      </section>
    </div>
  </div>
</div>
