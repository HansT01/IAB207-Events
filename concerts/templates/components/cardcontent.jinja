<div class="card border-0 bg-400 tx-000" style="max-width: 100%" type="button" data-bs-toggle="modal"
  data-bs-target="#modal-{{index}}">
  <div class="row g-0">
    <div class="col-md-3 card-img-section">
      <img src="{{event.image}}" class="img-fluid rounded-start card-img" alt="concert" />
    </div>
    <div class="col">
      <div class="card-body">
        <div class="row mb-2">
          <div class="col-xs-12 col-sm">
            <h3>{{event.title}}</h3>
          </div>
          <div class="col-auto">
            <h3>{{event.status}}</h3>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-12 col-sm">
            <p>
              <b>Artist:</b> {{event.artist}} <br />
              <b>Genre:</b> {{event.genre}} <br />
              <b>Date and time:</b> {{event.timestamp}}
              <br />
              <b>Venue:</b> {{event.venue}}
            </p>
          </div>
        </div>

        <div class="row">
          <p class="mt-2 card-desc">{{event.desc}}</p>
        </div>
      </div>
    </div>
  </div>
</div>