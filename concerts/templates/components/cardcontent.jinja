<div class="card border-0 bg-400 tx-000" style="max-width: 100%" type="button">
  <div class="row g-0">
    <div class="col-md-3 card-img-section">
      <img src="{{event.image}}" class="img-fluid rounded-start card-img" alt="concert" />
    </div>
    <div class="col">
      <div class="card-body">
        <div class="row">
          <div class="col-xs-12 col-sm mb-2">
            <h3>{{event.title}}</h3>
          </div>
          <div class="col-auto mb-2">
            <h3>{{event.status_display.upper()}}</h3>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-12 col-sm">
            <p>
              <b>Artist:</b> {{event.artist}} <br />
              <b>Genre:</b> {{event.genre}} <br />
              <b>Date:</b> {{event.timestamp.strftime("%d %b %Y, %I:%M %p")}}
              <br />
              <b>Venue:</b> {{event.venue}}
            </p>
          </div>
        </div>

        <div class="row mb-2">
          <p class="mt-2 card-desc">{{event.desc}}</p>
        </div>

        <a href="{{url_for('main.eventdetails', id=event.id, next=request.url)}}" class="stretched-link">More info</a>
      </div>
    </div>
  </div>
</div>